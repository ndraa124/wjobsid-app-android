<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="engineer"
            type="com.id124.wjobsid.model.engineer.EngineerModel" />

        <variable
            name="imageUrl"
            type="String" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_image_profile"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="16dp"
                android:contentDescription="@string/img_profile"
                android:scaleType="centerCrop"
                app:loadImage="@{imageUrl != null ? imageUrl : @drawable/ic_logo_blue}" />

            <LinearLayout
                android:id="@+id/ln_identity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_image_profile"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="@{engineer.acName}"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_job_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="@{engineer.enJobTitle}"
                    android:textAlignment="textStart"
                    android:textColor="@color/gray_700"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    app:flexWrap="wrap">

                    <TextView
                        android:id="@+id/tv_skill_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2.5dp"
                        android:layout_marginVertical="5dp"
                        android:background="@color/blue"
                        android:fontFamily="sans-serif-condensed"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="Javascript"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_skill_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2.5dp"
                        android:layout_marginVertical="5dp"
                        android:background="@color/blue"
                        android:fontFamily="sans-serif-condensed"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="PHP"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_skill_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2.5dp"
                        android:layout_marginVertical="5dp"
                        android:background="@color/blue"
                        android:fontFamily="sans-serif-condensed"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="HTML"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </com.google.android.flexbox.FlexboxLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>
